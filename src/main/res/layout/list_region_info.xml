<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/node_list_layout">

    <LinearLayout
            android:id="@+id/item_layout"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
                android:id="@+id/item_bg"
                android:orientation="horizontal"
                android:layout_width="4.0dp"
                android:layout_height="match_parent"/>


        <ImageView
                android:id="@+id/region_icon"
                android:layout_gravity="center"
                android:layout_width="36.0dp"
                android:layout_height="36.0dp"
                android:layout_marginLeft="18.0dip"
                android:layout_marginTop="18.0dip"
                android:layout_marginRight="8.0dip"
                android:layout_marginBottom="18.0dip"
                android:scaleType="centerInside"/>

        <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:orientation="vertical"
                    android:layout_width="0.0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.0"
                    android:paddingLeft="8.0dp"
                    android:paddingTop="16.0dp">

                <TextView
                        android:id="@+id/region_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="13.0sp"
                        android:textColor="@color/formTextColor"/>

            </LinearLayout>

            <RadioButton
                    android:id="@+id/checkbox_button"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12.0dp"
                    android:layout_marginRight="18.0dp"
                    style="@style/Material.Drawable.CheckBox"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
            android:background="@color/listlayoutDivider"
            android:layout_width="fill_parent"
            android:layout_height="0.5dip"/>
</LinearLayout>